<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plonetheme.bebest">
<body
	>

<metal:content-core fill-slot="main">
  <metal:content-core define-macro="main">
  <div tal:define="imgs python:view.getCarouselImages();
                   interval python:view.getCarouselInterval()">
   
    <section id="home-carousel-bebest">
   		<div class="container-fluid hidden-xs">
        	<div class="row">
             	<div class="carousel slide" data-ride="carousel" data-wrap="true" data-pause="false"
             	     tal:attributes="data-interval string:${interval}">
                <!-- Wrapper for slides -->
                  	<div class="carousel-inner" role="listbox">
                  	<span tal:omit-tag="" tal:repeat="img imgs">
                    	<div tal:condition="python:repeat.img.start" class="item active homeimg-container">
                      		<img tal:attributes="src python:img.absolute_url()" width="100%" alt="banner">
                   		</div>
                   		<div tal:condition="python:not repeat.img.start" class="item homeimg-container">
                            <img tal:attributes="src python:img.absolute_url()" width="100%" alt="banner">
                        </div>
                    </span>
                  	</div>
                </div>
              	<div id="bebest-slider-content" class="text-center hidden-xs"
              	     tal:define="logo_name python:view.getCarouselLogoName()"
              	     >
                   	<img class="imgwhite" tal:attributes="src string:${portal_url}/images/${logo_name}"
                   	     width="500"
                   	     alt="bebest blanc"
                   	     class="img-responsive" />
                    <p class="bright">${view/getCarouselText}</p>
			   </div>
    </section> <!--FIN SECTION CAROUSEL-->

	<!-- DEBUT THUMBNAILS -->
	<section id="home-thumbnail"
	         class="container" tal:replace="nothing">
	  <div tal:define="thumbs python:view.getCarouselThumbnails()">
	  <span tal:omit-tag="" tal:repeat="thumb thumbs">
		<div class="col-xs-12 col-sm-6 col-md-4 text-center">  
      	  <div class="home-thumbnail-item">
            <img tal:define="scale thumb/@@images" 
                 tal:replace="structure python: scale.scale('image', scale='large').tag(css_class='newsImage')" />
            <div class="thumbnail-item-dark"> 
              <h3>${thumb/title}</h3>
			  <hr>
              <p>${thumb/description}</p>
           </div>
          </div>  
        </div>
	  </span>
	  </div>
	</section>

  </div>
  </metal:content-core>
</metal:content-core>

</body>
</html>
  